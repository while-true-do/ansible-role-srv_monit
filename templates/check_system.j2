check system $HOST
  if loadavg (1min) > {{ (ansible_processor_cores * ansible_processor_count * ansible_processor_threads_per_core * 2) | int }} for 15 cycles then alert
  if loadavg (5min) > {{ (ansible_processor_cores * ansible_processor_count * ansible_processor_threads_per_core * 1.5) | int }} for 10 cycles then alert
  if loadavg (15min) > {{ (ansible_processor_cores * ansible_processor_count * ansible_processor_threads_per_core) | int }} for 8 cycles then alert
  if cpu usage > 95% for 10 cycles then alert
  if memory usage > 75% then alert
  if swap usage > 25% then alert
